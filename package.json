		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1",
		"vite": "^7.2.6",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"@atproto/api": "^0.18.8",
		"@atproto/oauth-client-node": "^0.3.13",
		"bullmq": "^5.66.3",
		"drizzle-orm": "^0.45.1",
		"ioredis": "^5.8.2",
		"postgres": "^3.4.7",
		"resend": "^6.6.0"
	}
